def is_palindrome(word):
    # 여기에 코드를 작성하세요
    le = len(word) // 2
    for i in range(le) :
        if word[i] != word[-i-1] :
            return False
    return True


# 테스트 코드
print(is_palindrome("racecar"))
print(is_palindrome("stars"))
print(is_palindrome("토마토"))
print(is_palindrome("kayak"))
print(is_palindrome("hello"))
